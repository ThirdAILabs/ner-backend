{
  "manifest_version": 3,
  "name": "PocketShield SafeGPT",
  "version": "1.0.0",
  "description": "PocketShield SafeGPT",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "management"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "http://localhost:16549/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["wasm/wasm-loader.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "PocketShield SafeGPT",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "wasm/build/*",
        "wasm/wasm-loader.js"
      ],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
} 