{
  "name": "electron-ner-app",
  "version": "1.0.0",
  "description": "Electron app for Named Entity Recognition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"electron . --dev\" \"cd src && vite\"",
    "build": "cd src && vite build && electron-builder",
    "vite-build": "cd src && vite build",
    "electron-build": "electron-builder"
  },
  "keywords": ["electron", "ner", "token-classification"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@heroicons/react": "v1",
    "@mui/icons-material": "^5.16.6",
    "@mui/lab": "6.0.0-beta.10",
    "@mui/material": "^5.16.6",
    "@mui/x-data-grid": "^7.12.0",
    "axios": "^1.7.2",
    "chart.js": "^4.4.3",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^2.6.0"
  },
  "build": {
    "appId": "com.electron.ner-app",
    "productName": "NER Electron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
